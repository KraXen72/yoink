{
  "name": "template_chrome_extension",
  "version": "0.0.1",
  "description": "Template chrome extension build with esbuild and typescript",
  "main": "index.js",
  "repository": "https://github.com/emelcd/template_chrome_extension",
  "author": "emelcd raticorps@gmail.com",
  "license": "MIT",
  "scripts": {
    "dev2": "esbuild popup=src/popup.ts background=src/background.ts content=src/content.ts  --bundle   --outdir=extension --watch --minify",
    "build2": "esbuild popup=src/popup.ts background=src/background.ts content=src/content.ts  --bundle   --outdir=extension --minify",
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.262",
    "esbuild": "^0.20.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "turndown": "^7.1.2"
  }
}
