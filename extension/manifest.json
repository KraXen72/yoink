{
  "name": "yoink",
  "description": "HTML to markdown clipper",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts":[{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "permissions": ["storage"]
}